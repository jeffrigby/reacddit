{
  "name": "reacddit",
  "version": "1.0.0",
  "description": "A Reddit client built in reactjs.",
  "type": "module",
  "scripts": {
    "start": "node scripts/start-dev.js",
    "start-proxy": "cd proxy && npm start",
    "start-client": "cd client && npm start",
    "build-client": "cd client && npm run build",
    "start-api": "cd api && npm start",
    "outdated-all": "find . -maxdepth 2 -name package.json -execdir npm outdated \\;",
    "update-all": "find . -maxdepth 2 -name package.json -execdir npm update \\;"
  },
  "keywords": [
    "es6",
    "react",
    "redux",
    "reddit"
  ],
  "author": "Jeff Rigby",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
