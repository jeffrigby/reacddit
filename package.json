{
  "name": "reacddit",
  "version": "1.0.0",
  "description": "A Reddit client built in reactjs.",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "api",
    "proxy"
  ],
  "scripts": {
    "setup": "tsx scripts/setup-wizard.ts",
    "start": "tsx scripts/start-dev.ts",
    "start-proxy": "npm run start -w proxy",
    "start-client": "npm run start -w client",
    "build-client": "npm run build -w client",
    "start-api": "npm run start -w api",
    "lint-all": "npm run lint --workspaces --if-present",
    "outdated-all": "npm outdated --workspaces",
    "update-all": "npm update --workspaces"
  },
  "keywords": [
    "es6",
    "react",
    "redux",
    "reddit"
  ],
  "author": "Jeff Rigby",
  "license": "MIT",
  "overrides": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@inquirer/prompts": "^8.0.1",
    "@types/node": "^24.10.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.22.0",
    "open": "^11.0.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
